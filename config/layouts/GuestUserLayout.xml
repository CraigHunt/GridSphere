<?xml version="1.0" encoding="UTF-8"?>

<!--

    Guest User Layout Descriptor

    This descriptor defines the guest user's portal layout configuration

    $Id$
-->

<page-layout title="GridSphere Portal">

<!-- Header components -->
<portlet-header>
    <portlet-content include="/html/pagehead.html"/>
</portlet-header>

<!-- Tabbed Panes -->
<portlet-tabbed-pane selected="0" style="menu">
    <portlet-tab>
        <title>Home</title>
        <portlet-tabbed-pane selected="0" style="sub-menu">
            <portlet-tab>
                <title>Welcome</title>
                <portlet-panel>
                    <grid-layout>
                        <portlet-frame>
                            <portlet-class>org.gridlab.gridsphere.portlets.core.LoginPortlet.1</portlet-class>
                        </portlet-frame>
                    </grid-layout>
                </portlet-panel>
            </portlet-tab>
            <portlet-tab>
                <title>News</title>
                <portlet-panel>
                    <grid-layout>
                        <portlet-frame>
                            <portlet-class>org.gridlab.gridsphere.portlets.groupware.rss.RSSPortlet.1</portlet-class>
                        </portlet-frame>
                    </grid-layout>
                </portlet-panel>
            </portlet-tab>
        </portlet-tabbed-pane>
    </portlet-tab>
    <portlet-tab>
        <title>Examples</title>
        <portlet-tabbed-pane style="sub-menu">
            <portlet-tab>
                <title>Hello World!</title>
                <portlet-panel>
                    <grid-layout>
                        <portlet-frame>
                            <portlet-class>org.gridlab.gridsphere.portlets.examples.HalloWelt.1</portlet-class>
                        </portlet-frame>
                        <portlet-frame>
                            <portlet-class>org.gridlab.gridsphere.portlets.examples.HalloWelt.1</portlet-class>
                        </portlet-frame>
                        <portlet-frame>
                            <portlet-class>org.gridlab.gridsphere.portlets.examples.HelloWorld.1</portlet-class>
                        </portlet-frame>
                        <portlet-frame>
                            <portlet-class>org.gridlab.gridsphere.portlets.examples.HelloWorld.2</portlet-class>
                        </portlet-frame>
                    </grid-layout>
                </portlet-panel>
            </portlet-tab>
            <portlet-tab>
                <title>Demos</title>
                <portlet-panel>
                    <grid-layout>
                        <portlet-frame>
                            <portlet-class>org.gridlab.gridsphere.portlets.examples.DemoPortlet.1</portlet-class>
                        </portlet-frame>
                    </grid-layout>
                </portlet-panel>
            </portlet-tab>
        </portlet-tabbed-pane>
    </portlet-tab>
</portlet-tabbed-pane>

<!-- Footer components (if any) -->

</page-layout>
