<page-layout title="GridSphere Portal">

<!-- Header components -->
<portlet-header>
    <portlet-panel>
        <grid-layout columns="80,20" style="header">
            <portlet-content include="/html/pagehead.html"/>
            <portlet-frame transparent="true" outer-padding="0">
                <portlet-class>org.gridlab.gridsphere.portlets.core.LogoutPortlet.1</portlet-class>
            </portlet-frame>
        </grid-layout>
    </portlet-panel>
</portlet-header>

<!-- Tabbed Panes -->
<portlet-tabbed-pane selected="0" style="menu">
    <portlet-tab>
        <title>Home</title>
        <portlet-tabbed-pane selected="0" style="sub-menu">
            <portlet-tab>
                <title>Welcome</title>
                <portlet-panel>
                    <grid-layout>
                        <portlet-frame>
                            <name>Login</name>
                            <portlet-class>org.gridlab.gridsphere.portlets.core.LoginPortlet.1</portlet-class>
                        </portlet-frame>
                    </grid-layout>
                </portlet-panel>
            </portlet-tab>
        </portlet-tabbed-pane>
   </portlet-tab>
   <portlet-tab>
        <title>Administration</title>
        <portlet-tabbed-pane style="sub-menu">
            <portlet-tab>
                <title>Portlets</title>
                <portlet-panel>
                    <grid-layout>
                        <portlet-frame>
                            <required-role>SUPER</required-role>
                            <portlet-class>org.gridlab.gridsphere.portlets.core.PortletApplicationManager.1</portlet-class>
                        </portlet-frame>
                    </grid-layout>
                </portlet-panel>
            </portlet-tab>
            <portlet-tab>
                <title>Accounts</title>
                <portlet-panel>
                    <grid-layout>
                        <portlet-frame>
                            <required-role>SUPER</required-role>
                            <portlet-class>org.gridlab.gridsphere.portlets.core.user.UserManagerPortlet.1</portlet-class>
                        </portlet-frame>
                    </grid-layout>
                </portlet-panel>
            </portlet-tab>
            <portlet-tab>
                <title>Access</title>
                <portlet-panel>
                    <grid-layout>
                        <portlet-frame>
                            <portlet-class>org.gridlab.gridsphere.portlets.core.AccessControllerPortlet.1</portlet-class>
                        </portlet-frame>
                    </grid-layout>
                </portlet-panel>
            </portlet-tab>
            <portlet-tab>
                <title>Credentials</title>
                <portlet-panel>
                    <grid-layout>
                        <portlet-frame>
                            <portlet-class>org.gridlab.gridsphere.portlets.grid.security.CredentialPermissionAdminPortlet.1</portlet-class>
                        </portlet-frame>
                        <portlet-frame>
                            <name>CredentialMappingAdminPortlet</name>
                            <portlet-class>org.gridlab.gridsphere.portlets.grid.security.CredentialMappingAdminPortlet.1</portlet-class>
                        </portlet-frame>
                        <portlet-frame>
                            <name>CredentialManagerAdminPortlet</name>
                            <portlet-class>org.gridlab.gridsphere.portlets.grid.security.CredentialManagerAdminPortlet.1</portlet-class>
                        </portlet-frame>
                    </grid-layout>
                </portlet-panel>
            </portlet-tab>
        </portlet-tabbed-pane>
   </portlet-tab>
   <portlet-tab>
        <title>Grid</title>
        <portlet-tabbed-pane style="sub-menu">
            <portlet-tab>
                <title>Welcome</title>
                <portlet-panel>
                    <grid-layout>
                        <portlet-frame>
                            <name>CredentialRetrievalUserPortlet</name>
                            <portlet-class>org.gridlab.gridsphere.portlets.grid.security.CredentialRetrievalUserPortlet.1</portlet-class>
                        </portlet-frame>
                        <portlet-frame>
                            <name>CredentialMappingUserPortlet</name>
                            <portlet-class>org.gridlab.gridsphere.portlets.grid.security.CredentialMappingUserPortlet.1</portlet-class>
                        </portlet-frame>
                    </grid-layout>
                </portlet-panel>
            </portlet-tab>
            <portlet-tab>
                <title>Jobs</title>
                <portlet-panel>
                    <grid-layout>
                        <portlet-frame>
                            <name>JobManagerPortlet</name>
                            <portlet-class>org.gridlab.gridsphere.portlets.grid.job.JobManagerPortlet.1</portlet-class>
                        </portlet-frame>
                    </grid-layout>
                </portlet-panel>
            </portlet-tab>
        </portlet-tabbed-pane>
   </portlet-tab>
   <portlet-tab>
        <title>Examples</title>
        <portlet-tabbed-pane style="sub-menu">
            <portlet-tab>
                <title>Hello World!</title>
                <portlet-panel>
                    <grid-layout>
                        <portlet-frame>
                            <name>HalloWelt</name>
                            <portlet-class>org.gridlab.gridsphere.portlets.examples.HalloWelt.1</portlet-class>
                        </portlet-frame>
                        <portlet-frame>
                            <name>HalloWelt</name>
                            <portlet-class>org.gridlab.gridsphere.portlets.examples.HalloWelt.1</portlet-class>
                        </portlet-frame>
                        <portlet-frame>
                            <name>HelloWorld</name>
                            <portlet-class>org.gridlab.gridsphere.portlets.examples.HelloWorld.1</portlet-class>
                        </portlet-frame>
                        <portlet-frame>
                            <name>HelloWorld</name>
                            <portlet-class>org.gridlab.gridsphere.portlets.examples.HelloWorld.2</portlet-class>
                        </portlet-frame>
                    </grid-layout>
                </portlet-panel>
            </portlet-tab>
            <portlet-tab>
                <title>Demos</title>
                <portlet-panel>
                    <grid-layout>
                        <portlet-frame>
                            <name>DemoPortlet</name>
                            <portlet-class>org.gridlab.gridsphere.portlets.examples.DemoPortlet.1</portlet-class>
                        </portlet-frame>
                    </grid-layout>
                </portlet-panel>
            </portlet-tab>
        </portlet-tabbed-pane>
    </portlet-tab>
</portlet-tabbed-pane>

<!-- Footer components (if any) -->

</page-layout>
