<?xml version="1.0" encoding="UTF-8"?>

<!--

    New User Layout Descriptor

    This descriptor defines a new user's portal layout configuration

    $Id$
-->

<page-layout title="GridSphere Portal">

<!-- Header components -->
<portlet-header>
    <portlet-panel>
        <grid-layout columns="80,20" style="header">
            <portlet-content include="/html/pagehead.html"/>
            <portlet-frame transparent="true" outer-padding="0">
                <portlet-class>org.gridlab.gridsphere.portlets.core.LogoutPortlet.1</portlet-class>
            </portlet-frame>
        </grid-layout>
    </portlet-panel>
</portlet-header>

<!-- Tabbed Panes -->
<portlet-tabbed-pane selected="0" style="menu">
    <portlet-tab>
        <title>GridSphere</title>
        <portlet-tabbed-pane selected="0" style="sub-menu">
            <portlet-tab>
                <title>Home</title>
                <portlet-panel>
                    <grid-layout>
                        <portlet-frame>
                            <name>Login</name>
                            <portlet-class>org.gridlab.gridsphere.portlets.core.LoginPortlet.1</portlet-class>
                        </portlet-frame>
                    </grid-layout>
                </portlet-panel>
            </portlet-tab>
            <portlet-tab>
                <title>Portlets</title>
                <portlet-panel>
                    <grid-layout>
                        <portlet-frame>
                            <portlet-class>org.gridlab.gridsphere.portlets.core.PortletApplicationManager.1</portlet-class>
                        </portlet-frame>
                    </grid-layout>
                </portlet-panel>
            </portlet-tab>
            <portlet-tab>
                <title>Accounts</title>
                <portlet-panel>
                    <grid-layout>
                        <portlet-frame>
                            <portlet-class>org.gridlab.gridsphere.portlets.core.user.UserManagerPortlet.1</portlet-class>
                        </portlet-frame>
                    </grid-layout>
                </portlet-panel>
            </portlet-tab>
            <portlet-tab>
                <title>Access</title>
                <portlet-panel>
                    <grid-layout>
                        <portlet-frame>
                            <portlet-class>org.gridlab.gridsphere.portlets.core.AccessControllerPortlet.1</portlet-class>
                        </portlet-frame>
                    </grid-layout>
                </portlet-panel>
            </portlet-tab>
        </portlet-tabbed-pane>
   </portlet-tab>
</portlet-tabbed-pane>

<!-- Footer components (if any) -->

</page-layout>
