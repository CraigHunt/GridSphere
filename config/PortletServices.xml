<!--

    Portlet Services XML Descriptor

    Edit this file to add/modify GridSphere Portlet Services


    $Id$
-->

<portlet-services>

    <service>
        <name>Portlet Manager Service</name>
        <user-required>true</user-required>
        <description>Provides Administration Capabilities for Portlet Web Applications</description>
        <interface>org.gridlab.gridsphere.services.core.registry.PortletManagerService</interface>
        <implementation>org.gridlab.gridsphere.services.core.registry.impl.PortletManagerServiceImpl</implementation>
        <service-config>
            <param-name>coreContext</param-name>
            <param-value>gsmanager, coreportlets, gridportlets, exampleportlets</param-value>
        </service-config>
    </service>

    <service>
        <name>Login Service</name>
        <description>Provides Login Capabilities</description>
        <interface>org.gridlab.gridsphere.services.core.user.LoginService</interface>
        <implementation>org.gridlab.gridsphere.services.core.user.impl.LoginServiceImpl</implementation>
    </service>

    <service>
        <name>Access Control Manager Service</name>
        <user-required>true</user-required>
        <description>Provides Authorization Capabilities to Portal Users</description>
        <interface>org.gridlab.gridsphere.services.core.security.acl.AccessControlManagerService</interface>
        <implementation>org.gridlab.gridsphere.services.core.security.acl.impl.AccessControlManagerServiceImpl</implementation>
    </service>

    <service>
        <name>User Account Manager Service</name>
        <user-required>true</user-required>
        <description>Provides User Administration Capabilities</description>
        <interface>org.gridlab.gridsphere.services.core.user.UserManagerService</interface>
        <implementation>org.gridlab.gridsphere.services.core.user.impl.UserManagerServiceImpl</implementation>
        <service-config>
            <param-name>userID</param-name>
            <param-value>root</param-value>
        </service-config>
        <service-config>
            <param-name>password</param-name>
            <param-value></param-value>
        </service-config>
    </service>

    <service>
        <name>Password Manager Service</name>
        <description>Provides Password Management Capabilities</description>
        <interface>org.gridlab.gridsphere.services.core.security.password.PasswordManagerService</interface>
        <implementation>org.gridlab.gridsphere.services.core.security.password.impl.DbmsPasswordManagerService</implementation>
    </service>

    <service>
        <name>Credential Manager Service</name>
        <user-required>true</user-required>
        <description>Provides Credential Management Capabilities</description>
        <interface>org.gridlab.gridsphere.services.grid.security.credential.CredentialManagerService</interface>
        <implementation>org.gridlab.gridsphere.services.grid.security.credential.impl.CredentialManagerServiceImpl</implementation>
        <service-config>
            <param-name>permittedCredentialSubjects</param-name>
            <param-value>/*</param-value>
        </service-config>
        <service-config>
            <param-name>permittedCredentialDescriptions</param-name>
            <param-value>All credentials</param-value>
        </service-config>
        <service-config>
            <param-name>retrievalHost</param-name>
            <param-value>supergrid.aei.mpg.de</param-value>
        </service-config>
        <service-config>
            <param-name>x509UserCertificate</param-name>
            <param-value></param-value>
        </service-config>
        <service-config>
            <param-name>x509UserKey</param-name>
            <param-value></param-value>
        </service-config>
        <service-config>
            <param-name>x509CertificatesPath</param-name>
            <param-value></param-value>
        </service-config>
    </service>

    <service>
        <name>Job Manager Service</name>
        <user-required>true</user-required>
        <description>Provides Job Submission and Management Capabilities</description>
        <interface>org.gridlab.gridsphere.services.grid.job.JobManagerService</interface>
        <implementation>org.gridlab.gridsphere.services.grid.job.impl.JobManagerServiceImpl</implementation>
    </service>

    <service>
        <name>Layout Service</name>
        <description>Provides Layout Capabilities</description>
        <interface>org.gridlab.gridsphere.services.core.layout.LayoutManagerService</interface>
        <implementation>org.gridlab.gridsphere.services.core.layout.impl.LayoutManagerServiceImpl</implementation>
    </service>

</portlet-services>
