<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/j2ee/dtds/web-app_2.3.dtd">

<web-app>
    <display-name>Core Portlets</display-name>

    <description>
        Provides Core GridSphere Portlets
    </description>


    <listener>
        <listener-class>org.gridlab.gridsphere.portlet.AbstractPortlet</listener-class>
    </listener>


    <servlet>
        <servlet-name>HelloWorld</servlet-name>
        <servlet-class>org.gridlab.gridsphere.portlets.core.HelloWorld</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>HalloWelt</servlet-name>
        <servlet-class>org.gridlab.gridsphere.portlets.core.HalloWelt</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>LoginPortlet</servlet-name>
        <servlet-class>org.gridlab.gridsphere.portlets.core.LoginPortlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>SubscriptionPortlet</servlet-name>
        <servlet-class>org.gridlab.gridsphere.portlets.core.SubscriptionPortlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DemoPortlet</servlet-name>
        <servlet-class>org.gridlab.gridsphere.portlets.core.DemoPortlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ManagerPortlet</servlet-name>
        <servlet-class>org.gridlab.gridsphere.portlets.core.PortletApplicationManager</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>RSSPortlet</servlet-name>
        <servlet-class>org.gridlab.gridsphere.portlets.core.RSSPortlet</servlet-class>
    </servlet>

    <servlet-mapping>
       <servlet-name>HelloWorld</servlet-name>
       <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
       <servlet-name>HalloWelt</servlet-name>
       <url-pattern>/hallo</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
       <servlet-name>LoginPortlet</servlet-name>
       <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
       <servlet-name>SubscriptionPortlet</servlet-name>
       <url-pattern>/subscription</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
       <servlet-name>DemoPortlet</servlet-name>
       <url-pattern>/demo</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
       <servlet-name>ManagerPortlet</servlet-name>
       <url-pattern>/appmanager</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
       <servlet-name>RSSPortlet</servlet-name>
       <url-pattern>/rss</url-pattern>
    </servlet-mapping>


    <mime-mapping>
      <extension>wbmp</extension>
      <mime-type>image/vnd.wap.wbmp</mime-type>
    </mime-mapping>

    <mime-mapping>
      <extension>wml</extension>
      <mime-type>text/vnd.wap.wml</mime-type>
    </mime-mapping>

    <mime-mapping>
      <extension>wmls</extension>
      <mime-type>text/vnd.wap.wmlscript</mime-type>
    </mime-mapping>

</web-app>
