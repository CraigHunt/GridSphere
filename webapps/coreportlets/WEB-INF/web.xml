<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/j2ee/dtds/web-app_2.3.dtd">

<web-app>
    <display-name>Core Portlets</display-name>

    <description>
        Provides Core GridSphere Portlets
    </description>

    <servlet>
        <servlet-name>HelloWorld</servlet-name>
        <servlet-class>org.gridlab.gridsphere.portlets.examples.HelloWorld</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>HalloWelt</servlet-name>
        <servlet-class>org.gridlab.gridsphere.portlets.examples.HalloWelt</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>LoginPortlet</servlet-name>
        <servlet-class>org.gridlab.gridsphere.portlets.core.LoginPortlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>LogoutPortlet</servlet-name>
        <servlet-class>org.gridlab.gridsphere.portlets.core.LogoutPortlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>SubscriptionPortlet</servlet-name>
        <servlet-class>org.gridlab.gridsphere.portlets.core.SubscriptionPortlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DemoPortlet</servlet-name>
        <servlet-class>org.gridlab.gridsphere.portlets.examples.DemoPortlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>RSSPortlet</servlet-name>
        <servlet-class>org.gridlab.gridsphere.portlets.core.RSSPortlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>UserManagerPortlet</servlet-name>
        <servlet-class>org.gridlab.gridsphere.portlets.core.UserManagerPortlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AccessControllerPortlet</servlet-name>
        <servlet-class>org.gridlab.gridsphere.portlets.core.AccessControllerPortlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CredentialMappingPortlet</servlet-name>
        <servlet-class>org.gridlab.gridsphere.portlets.grid.CredentialMappingPortlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CredentialPermissionPortlet</servlet-name>
        <servlet-class>org.gridlab.gridsphere.portlets.grid.CredentialPermissionPortlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ActiveCredentialPortlet</servlet-name>
        <servlet-class>org.gridlab.gridsphere.portlets.grid.ActiveCredentialPortlet</servlet-class>
    </servlet>

    <servlet-mapping>
       <servlet-name>HelloWorld</servlet-name>
       <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
       <servlet-name>HalloWelt</servlet-name>
       <url-pattern>/hallo</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
       <servlet-name>LoginPortlet</servlet-name>
       <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
       <servlet-name>LogoutPortlet</servlet-name>
       <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
       <servlet-name>SubscriptionPortlet</servlet-name>
       <url-pattern>/subscription</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
       <servlet-name>DemoPortlet</servlet-name>
       <url-pattern>/demo</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
       <servlet-name>RSSPortlet</servlet-name>
       <url-pattern>/rss</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
       <servlet-name>UserManagerPortlet</servlet-name>
       <url-pattern>/adminstration/accounts</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
       <servlet-name>AccessControllerPortlet</servlet-name>
       <url-pattern>/adminstration/access</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
       <servlet-name>CredentialMappingPortlet</servlet-name>
       <url-pattern>/adminstration/credential/mapping</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
       <servlet-name>CredentialPermissionPortlet</servlet-name>
       <url-pattern>/adminstration/credential/permission</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
       <servlet-name>ActiveCredentialPortlet</servlet-name>
       <url-pattern>/adminstration/credential/active`</url-pattern>
    </servlet-mapping>

    <mime-mapping>
      <extension>wbmp</extension>
      <mime-type>image/vnd.wap.wbmp</mime-type>
    </mime-mapping>

    <mime-mapping>
      <extension>wml</extension>
      <mime-type>text/vnd.wap.wml</mime-type>
    </mime-mapping>

    <mime-mapping>
      <extension>wmls</extension>
      <mime-type>text/vnd.wap.wmlscript</mime-type>
    </mime-mapping>

</web-app>
