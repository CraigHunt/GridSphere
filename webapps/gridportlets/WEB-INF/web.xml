<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/j2ee/dtds/web-app_2.3.dtd">

<web-app>
    <display-name>Grid Portlets</display-name>

    <description>
        Provides Grid Portlets for GridSphere
    </description>

    <servlet>
        <servlet-name>CredentialMappingAdminPortlet</servlet-name>
        <servlet-class>org.gridlab.gridsphere.portlets.grid.security.CredentialMappingAdminPortlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CredentialPermissionAdminPortlet</servlet-name>
        <servlet-class>org.gridlab.gridsphere.portlets.grid.security.CredentialPermissionAdminPortlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CredentialManagerAdminPortlet</servlet-name>
        <servlet-class>org.gridlab.gridsphere.portlets.grid.security.CredentialManagerAdminPortlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CredentialRetrievalUserPortlet</servlet-name>
        <servlet-class>org.gridlab.gridsphere.portlets.grid.security.CredentialRetrievalUserPortlet</servlet-class>
    </servlet>

    <servlet-mapping>
       <servlet-name>CredentialMappingAdminPortlet</servlet-name>
       <url-pattern>/adminstration/credential/mapping</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
       <servlet-name>CredentialPermissionAdminPortlet</servlet-name>
       <url-pattern>/adminstration/credential/permission</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
       <servlet-name>CredentialManagerAdminPortlet</servlet-name>
       <url-pattern>/adminstration/credential/active`</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
       <servlet-name>CredentialRetrievalUserPortlet</servlet-name>
       <url-pattern>/grid/credential/retrieve`</url-pattern>
    </servlet-mapping>

    <mime-mapping>
      <extension>wbmp</extension>
      <mime-type>image/vnd.wap.wbmp</mime-type>
    </mime-mapping>

    <mime-mapping>
      <extension>wml</extension>
      <mime-type>text/vnd.wap.wml</mime-type>
    </mime-mapping>

    <mime-mapping>
      <extension>wmls</extension>
      <mime-type>text/vnd.wap.wmlscript</mime-type>
    </mime-mapping>

</web-app>
