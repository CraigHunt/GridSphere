<!-- CredentialPermissionAdminPortlet -->

<portlet-app-def>

<portlet-app id="org.gridlab.gridsphere.portlets.grid.security.CredentialPermissionAdminPortlet">
    <portlet-name>Credential Permission Manager</portlet-name>
    <servlet-name>CredentialPermissionAdminPortlet</servlet-name>
    <portlet-config>
        <param-name>Portlet Master</param-name>
        <param-value>yourid@yourdomain.com</param-value>
    </portlet-config>
    <cache>
        <expires>120</expires>
        <shared>false</shared>
    </cache>
    <allows>
        <maximized/>
        <minimized/>
        <resizing/>
    </allows>
    <supports>
        <markup name="html">
            <view/>
            <edit/>
            <help/>
            <configure/>
        </markup>
        <markup name="wml">
            <view/>
            <edit/>
            <help/>
            <configure/>
        </markup>
    </supports>
</portlet-app>

<concrete-portlet-app id="org.gridlab.gridsphere.portlets.grid.security.CredentialPermissionAdminPortlet.1">
    <context-param>
        <param-name>Portlet Master</param-name>
        <param-value>yourid@yourdomain.com</param-value>
    </context-param>
    <concrete-portlet>
        <portlet-name>Credential Permission Manager</portlet-name>
        <default-locale>en</default-locale>
        <language locale="en_US">
            <title>Credential Permission Manager</title>
            <title-short>CredentialPermissionManager</title-short>
            <description>Enables administrators to specify what credentials are permitted for use in GridSphere.</description>
            <keywords>credential permission user administration</keywords>
        </language>
        <allowed-access visibility="public">
            <role>ANY</role>
        </allowed-access>
    </concrete-portlet>
</concrete-portlet-app>

</portlet-app-def>

