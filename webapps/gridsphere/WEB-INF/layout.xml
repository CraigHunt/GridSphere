<?xml version="1.0" encoding="UTF-8"?>

<portlet-tabbed-pane>
    <portlet-tab>
        <title>Welcome</title>
        <portlet-panel>
            <grid-layout>
                <portlet-frame>
                    <name>Login</name>
                    <portlet-class>org.gridlab.gridsphere.portlets.core.LoginPortlet.1</portlet-class>
                </portlet-frame>
            </grid-layout>
        </portlet-panel>
    </portlet-tab>
    <portlet-tab>
        <required-role>SUPER</required-role>
        <title>Administration</title>
        <portlet-tabbed-pane style="sub-menu">
            <portlet-tab>
                <title>Portlets</title>
                <portlet-panel>
                    <grid-layout>
                        <portlet-frame>
                            <portlet-class>org.gridlab.gridsphere.portlets.core.PortletApplicationManager.1</portlet-class>
                        </portlet-frame>
                    </grid-layout>
                </portlet-panel>
            </portlet-tab>
            <portlet-tab>
                <title>Accounts</title>
                <portlet-panel>
                    <grid-layout>
                        <portlet-frame>
                            <portlet-class>org.gridlab.gridsphere.portlets.core.user.UserManagerPortlet.1</portlet-class>
                        </portlet-frame>
                    </grid-layout>
                </portlet-panel>
            </portlet-tab>
            <portlet-tab>
                <title>Access</title>
                <portlet-panel>
                    <grid-layout>
                        <portlet-frame>
                            <portlet-class>org.gridlab.gridsphere.portlets.core.AccessControllerPortlet.1</portlet-class>
                        </portlet-frame>
                    </grid-layout>
                </portlet-panel>
            </portlet-tab>
        </portlet-tabbed-pane>
    </portlet-tab>
</portlet-tabbed-pane>




