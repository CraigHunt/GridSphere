<?xml version="1.0" encoding="UTF-8"?>

<portlet-tabbed-pane>
    <portlet-tab label="welcome" title="Welcome">
        <portlet-tabbed-pane style="sub-menu">
            <portlet-tab label="home" title="Home">
                <table-layout>
                    <row-layout>
                        <column-layout width="50%">
                            <portlet-frame label="filemanager">
                                <portlet-class>org.gridlab.gridsphere.portlets.core.file.FileManagerPortlet.1</portlet-class>
                            </portlet-frame>
                        </column-layout>
                    </row-layout>
                    <row-layout>
                        <column-layout>
                            <portlet-frame label="banner">
                                <portlet-class>org.gridlab.gridsphere.portlets.core.file.BannerPortlet.1</portlet-class>
                            </portlet-frame>
                        </column-layout>
                    </row-layout>
                </table-layout>
            </portlet-tab>
            <portlet-tab label="settings" title="Settings">
                <table-layout>
                    <row-layout>
                        <column-layout>
                            <portlet-frame label="profile">
                                <portlet-class>org.gridlab.gridsphere.portlets.core.user.ProfileManagerPortlet.1</portlet-class>
                            </portlet-frame>
                        </column-layout>
                    </row-layout>
                </table-layout>
            </portlet-tab>
            <portlet-tab label="utilities" title="Utilities">
                <table-layout>
                    <row-layout>
                        <column-layout>
                            <portlet-frame label="notepad">
                                <portlet-class>org.gridlab.gridsphere.portlets.core.notepad.NotePadPortlet.1</portlet-class>
                            </portlet-frame>
                        </column-layout>
                    </row-layout>
                </table-layout>
            </portlet-tab>
        </portlet-tabbed-pane>
    </portlet-tab>
    <portlet-tab title="Administration" required-role="SUPER">
        <portlet-tabbed-pane style="sub-menu">
            <portlet-tab title="Users">
                <table-layout>
                    <row-layout>
                        <column-layout width="80%">
                            <portlet-frame label="usermanager">
                                <portlet-class>org.gridlab.gridsphere.portlets.core.admin.users.UserManagerPortlet.1</portlet-class>
                            </portlet-frame>
                        </column-layout>
                    </row-layout>
                </table-layout>
            </portlet-tab>
            <portlet-tab title="Groups">
                <table-layout>
                    <row-layout>
                        <column-layout width="80%">
                            <portlet-frame label="groupmanager">
                                <portlet-class>org.gridlab.gridsphere.portlets.core.admin.groups.GroupManagerPortlet.1</portlet-class>
                            </portlet-frame>
                        </column-layout>
                    </row-layout>
                </table-layout>
            </portlet-tab>
        </portlet-tabbed-pane>
    </portlet-tab>
</portlet-tabbed-pane>

