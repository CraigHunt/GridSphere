<?xml version="1.0" encoding="UTF-8"?>

<portlet-tabbed-pane>
    <portlet-tab label="welcome">
        <title lang="en">Welcome</title>
        <title lang="de">Willkommen</title>
        <title lang="it">Benvenuto</title>
        <portlet-tabbed-pane style="sub-menu">
            <portlet-tab label="home">
                <title lang="en">Home</title>
                <title lang="it">Inizio</title>
                <table-layout>
                    <row-layout>
                        <column-layout>
                            <portlet-frame label="banner">
                                <portlet-class>org.gridlab.gridsphere.portlets.core.file.BannerPortlet.1</portlet-class>
                            </portlet-frame>
                        </column-layout>
                    </row-layout>
                </table-layout>
            </portlet-tab>
            <portlet-tab label="settings">
                <title lang="en">Settings</title>
                <title lang="it">Preferenze</title>
                <table-layout>
                    <row-layout>
                        <column-layout>
                            <portlet-frame label="profile">
                                <portlet-class>org.gridlab.gridsphere.portlets.core.user.ProfileManagerPortlet.1</portlet-class>
                            </portlet-frame>
                        </column-layout>
                    </row-layout>
                </table-layout>
            </portlet-tab>
            <portlet-tab label="subscribe">
                <title lang="en">Subscription</title>
                <title lang="it">Sottoscrizione</title>
                <table-layout>
                    <row-layout>
                        <column-layout>
                            <portlet-frame label="subscription">
                                <portlet-class>org.gridlab.gridsphere.portlets.core.subscription.SubscriptionPortlet.1</portlet-class>
                            </portlet-frame>
                        </column-layout>
                    </row-layout>
                </table-layout>
            </portlet-tab>
            <portlet-tab label="layouttab">
                <title lang="en">Layout</title>
                <title lang="it">Layout</title>
                <table-layout>
                    <row-layout>
                        <column-layout>
                            <portlet-frame label="layout">
                                <portlet-class>org.gridlab.gridsphere.portlets.core.layout.LayoutManagerPortlet.1</portlet-class>
                            </portlet-frame>
                        </column-layout>
                    </row-layout>
                </table-layout>
            </portlet-tab>
            <portlet-tab label="utilities">
                <title lang="en">Utilities</title>
                <title lang="it">Utilit√†</title>
                <table-layout>
                    <row-layout>
                        <column-layout width="50%">
                            <portlet-frame label="notepad">
                                <portlet-class>org.gridlab.gridsphere.portlets.core.notepad.NotePadPortlet.1</portlet-class>
                            </portlet-frame>
                        </column-layout>
                        <column-layout width="50%">
                            <portlet-frame label="textmessaging">
                                <portlet-class>org.gridlab.gridsphere.portlets.core.messaging.TextMessagingPortlet.1</portlet-class>
                            </portlet-frame>
                        </column-layout>
                    </row-layout>
                    <row-layout>
                        <column-layout width="50%">
                            <portlet-frame label="filemanager">
                                <portlet-class>org.gridlab.gridsphere.portlets.core.file.FileManagerPortlet.1</portlet-class>
                            </portlet-frame>
                        </column-layout>
                    </row-layout>
                </table-layout>
            </portlet-tab>
        </portlet-tabbed-pane>
    </portlet-tab>
    <portlet-tab label="admin" required-role="SUPER">
        <title lang="en">Administration</title>
        <title lang="it">Amministrazione</title>
        <portlet-tabbed-pane style="sub-menu">
            <portlet-tab label="portlets">
                <title lang="en">Portlets</title>
                <table-layout>
                    <row-layout>
                        <column-layout width="30%">
                            <portlet-frame label="loginconfig">
                                <portlet-class>org.gridlab.gridsphere.portlets.core.login.LoginPortlet.1</portlet-class>
                            </portlet-frame>
                        </column-layout>
                        <column-layout width="70%">
                            <portlet-frame label="portletmanager">
                                <portlet-class>org.gridlab.gridsphere.portlets.core.admin.portlets.PortletApplicationManager.1</portlet-class>
                            </portlet-frame>
                        </column-layout>
                    </row-layout>
                </table-layout>
            </portlet-tab>
            <portlet-tab label="users">
                <title lang="en">Users</title>
                <title lang="it">Utenti</title>
                <table-layout>
                    <row-layout>
                        <column-layout width="50%">
                            <portlet-frame label="usermanager">
                                <portlet-class>org.gridlab.gridsphere.portlets.core.admin.users.UserManagerPortlet.1</portlet-class>
                            </portlet-frame>
                        </column-layout>
                        <column-layout width="50%"/>
                    </row-layout>
                </table-layout>
            </portlet-tab>
            <portlet-tab label="groups">
                <title lang="en">Groups</title>
                <title lang="it">Gruppi</title>
                <table-layout>
                    <row-layout>
                        <column-layout width="50%">
                            <portlet-frame label="groupmanager">
                                <portlet-class>org.gridlab.gridsphere.portlets.core.admin.groups.GroupManagerPortlet.1</portlet-class>
                            </portlet-frame>
                        </column-layout>
                        <column-layout width="50%"/>
                    </row-layout>
                </table-layout>
            </portlet-tab>
        </portlet-tabbed-pane>
    </portlet-tab>
</portlet-tabbed-pane>

