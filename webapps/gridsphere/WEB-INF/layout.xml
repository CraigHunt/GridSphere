<?xml version="1.0" encoding="UTF-8"?>

<portlet-tabbed-pane>
    <portlet-tab>
        <title>Welcome</title>
        <portlet-tabbed-pane style="sub-menu">
            <portlet-tab label="home">
                <title>Home</title>
                <table-layout>
                    <row-layout>
                        <column-layout width="30%">
                            <portlet-frame label="login">
                                <portlet-class>org.gridlab.gridsphere.portlets.core.login.LoginPortlet.1</portlet-class>
                            </portlet-frame>
                        </column-layout>
                        <column-layout width="70%">
                            <portlet-frame label="filemanager">
                                <portlet-class>org.gridlab.gridsphere.portlets.core.file.FileManagerPortlet.1</portlet-class>
                            </portlet-frame>
                        </column-layout>
                    </row-layout>
                    <row-layout>
                        <column-layout>
                            <portlet-frame label="banner">
                                <portlet-class>org.gridlab.gridsphere.portlets.core.file.BannerPortlet.1</portlet-class>
                            </portlet-frame>
                        </column-layout>
                    </row-layout>
                </table-layout>
            </portlet-tab>
            <portlet-tab label="utilities">
                <title>Utilities</title>
                <table-layout>
                    <row-layout>
                        <column-layout>
                            <portlet-frame label="notepad">
                                <portlet-class>org.gridlab.gridsphere.portlets.core.notepad.NotePadPortlet.1</portlet-class>
                            </portlet-frame>
                        </column-layout>
                    </row-layout>
                </table-layout>
            </portlet-tab>
        </portlet-tabbed-pane>
    </portlet-tab>
    <portlet-tab>
        <required-role>SUPER</required-role>
        <title>Administration</title>
        <portlet-tabbed-pane style="sub-menu">
            <portlet-tab>
                <title>Portlets</title>
                <table-layout>
                    <row-layout>
                        <column-layout width="80%">
                            <portlet-frame>
                                <portlet-class>org.gridlab.gridsphere.portlets.core.PortletApplicationManager.1</portlet-class>
                            </portlet-frame>
                        </column-layout>
                    </row-layout>
                </table-layout>
            </portlet-tab>
            <portlet-tab>
                <title>Users</title>
                <table-layout>
                    <row-layout>
                        <column-layout width="80%">
                            <portlet-frame>
                                <portlet-class>org.gridlab.gridsphere.portlets.core.admin.users.UserManagerPortlet.1</portlet-class>
                            </portlet-frame>
                        </column-layout>
                    </row-layout>
                </table-layout>
            </portlet-tab>
            <portlet-tab>
                <title>Groups</title>
                <table-layout>
                    <row-layout>
                        <column-layout width="80%">
                            <portlet-frame>
                                <portlet-class>org.gridlab.gridsphere.portlets.core.admin.groups.GroupManagerPortlet.1</portlet-class>
                            </portlet-frame>
                        </column-layout>
                    </row-layout>
                </table-layout>
            </portlet-tab>
        </portlet-tabbed-pane>
    </portlet-tab>
</portlet-tabbed-pane>

