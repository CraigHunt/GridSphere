<?xml version="1.0" encoding="UTF-8"?>

<!--

    Guest User Layout Descriptor

    This descriptor defines the guest user's portal layout configuration

    $Id$
-->

<page-layout theme="xp" title="GridSphere Portal">

<!-- Header components -->
<portlet-header>
    <portlet-content include="/html/pagehead.html"/>
</portlet-header>

<!-- Tabbed Panes -->
<portlet-tabbed-pane selected="0" style="menu">
    <portlet-tab title="GridSphere">
        <portlet-tabbed-pane selected="0" style="sub-menu">
            <portlet-tab label="home" title="Home">
                <table-layout>
                    <row-layout>
                        <column-layout width="70%">
                            <portlet-frame label="banner">
                                <portlet-class>org.gridlab.gridsphere.portlets.core.file.BannerPortlet.1</portlet-class>
                            </portlet-frame>
                        </column-layout>
                        <column-layout width="30%">
                            <portlet-frame label="login">
                                <portlet-class>org.gridlab.gridsphere.portlets.core.login.LoginPortlet.1</portlet-class>
                            </portlet-frame>
                        </column-layout>
                    </row-layout>
                </table-layout>
            </portlet-tab>
        </portlet-tabbed-pane>
    </portlet-tab>
</portlet-tabbed-pane>

<!-- Footer components (if any) -->

</page-layout>
