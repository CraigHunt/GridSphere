<?xml version="1.0" encoding="UTF-8"?>

<!--

    Template Layout Descriptor

    This descriptor defines the template user's portal layout configuration

    $Id$
-->

<page-layout theme="xp" title="GridSphere Portal">

    <portlet-header>
        <table-layout style="header">
            <row-layout>
                <column-layout>
                    <portlet-frame transparent="true" outer-padding="0" label="locale">
                        <portlet-class>org.gridlab.gridsphere.portlets.core.locale.LocalePortlet.1</portlet-class>
                    </portlet-frame>
                </column-layout>
            </row-layout>
            <row-layout>
                <column-layout width="80%">
                    <portlet-content include="/html/pagehead.html"/>
                </column-layout>
                <column-layout width="20%">
                    <portlet-frame transparent="true" outer-padding="0" label="logout">
                        <portlet-class>org.gridlab.gridsphere.portlets.core.login.LogoutPortlet.1</portlet-class>
                    </portlet-frame>
                </column-layout>
            </row-layout>
        </table-layout>
    </portlet-header>

<portlet-tabbed-pane selected="0" style="menu">

</portlet-tabbed-pane>

</page-layout>
