<?xml version="1.0" encoding="UTF-8"?>

<!--

    Guest User Layout Descriptor

    This descriptor defines the guest user's portal layout configuration

    $Id$
-->

<page label="guest"
      title="GridSphere Portal"
      keywords="gridsphere"
      icon="images/favicon.ico"
      renderkit="brush">

    <!-- Header components -->
    <header>
        <table>
            <row>
                <column width="60%">
                    <content include="/WEB-INF/CustomPortal/content/pagehead.jsp"/>
                </column>
                <column width="20%">
                    <frame transparent="true" outer-padding="0px" label="locale">
                        <portlet-class>org.gridsphere.portlets.core.locale.LocalePortlet</portlet-class>
                    </frame>
                </column>
                <column width="20%">
                    <content include="/jsp/login/loginnav.jsp"/>
                </column>
            </row>
        </table>
    </header>

    <!-- Tabbed Panes -->

    <bar>
        <table>
            <row>
                <column width="100%">
                    <content include="/WEB-INF/CustomPortal/content/main.html"/>
                </column>
            </row>
        </table>
    </bar>

    <!-- Footer components (if any) -->
    <footer>
        <table>
            <row>
                <column width="50%">
                    <frame transparent="true" outer-padding="0px" label="date">
                        <portlet-class>org.gridsphere.portlets.core.date.DatePortlet</portlet-class>
                    </frame>
                </column>
                <column width="50%">
                    <content include="/WEB-INF/CustomPortal/content/pagefooter.jsp"/>
                </column>
            </row>
        </table>
    </footer>

</page>
