<?xml version="1.0" encoding="UTF-8"?>

<!--

    Layout Manager Descriptor

    This descriptor defines the guest user's portal layout configuration

    $Id: SetupLayout.xml 4633 2006-03-09 16:44:16Z wehrens $
-->

<page-layout title="GridSphere Portal" keywords="gridsphere" icon="images/favicon.ico" renderkit="brush" editable="false" required-role="SUPER">

    <!-- Header components -->
    <portlet-header>
        <table-layout style="header">
            <row-layout>
                <column-layout width="70%">
                    <portlet-content include="/WEB-INF/CustomPortal/content/pagehead.html"/>
                </column-layout>
                <column-layout width="15%">
                    <portlet-frame transparent="true" outer-padding="0" label="logout">
                        <portlet-class>org.gridlab.gridsphere.portlets.core.login.LogoutPortlet.1</portlet-class>
                    </portlet-frame>
                </column-layout>
            </row-layout>
        </table-layout>
    </portlet-header>

    <portlet-tabbed-pane selected="0" style="menu" theme="default">
        <portlet-tab label="gridsphere">
            <title lang="en">GridSphere</title>
            <portlet-tabbed-pane selected="0" style="sub-menu">
                <portlet-tab label="setup">
                    <title lang="en">Layout Manager</title>
                    <table-layout>
                        <row-layout>
                            <column-layout width="100%">
                                <portlet-frame label="layoutmanager">
                                    <portlet-class>org.gridlab.gridsphere.portlets.core.admin.layout.LayoutManagerPortlet.1</portlet-class>
                                </portlet-frame>
                            </column-layout>
                        </row-layout>
                    </table-layout>
                </portlet-tab>
            </portlet-tabbed-pane>
        </portlet-tab>

    </portlet-tabbed-pane>

    <!-- Footer components (if any) -->
    <portlet-footer>
        <table-layout style="footer">
            <row-layout>
                <column-layout>
                    <portlet-content include="/WEB-INF/CustomPortal/content/pagefooter.html"/>
                </column-layout>
            </row-layout>
        </table-layout>
    </portlet-footer>


</page-layout>
