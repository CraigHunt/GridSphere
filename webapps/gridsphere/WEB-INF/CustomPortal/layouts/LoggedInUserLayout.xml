<?xml version="1.0" encoding="UTF-8"?>

<!--

Logged In User Layout Descriptor

This descriptor defines the user's portal layout upon logging into the portal

$Id$
-->

<page-layout label="user" title="GridSphere Portal" keywords="gridsphere" icon="images/favicon.ico" renderkit="brush" editable="true" required-role="USER">

    <portlet-header>
        <portlet-content include="/WEB-INF/CustomPortal/content/pagehead.jsp"/>
        <portlet-content include="/jsp/login/welcome.jsp"/>
    </portlet-header>

    <portlet-tabbed-pane style="menu">
        <portlet-tab label="gridsphere" display="false">
            <title lang="en">GridSphere</title>
            <portlet-tabbed-pane selected="0" style="sub-menu">
            <portlet-tab label="home" display="false">
                <title lang="en">Home</title>
                <table-layout>
                    <row-layout>
                        <column-layout width="70%">
                            <portlet-content include="/WEB-INF/CustomPortal/content/main.html"/>
                            <portlet-frame transparent="true" outer-padding="0" label="rss">
                                <portlet-class>org.gridsphere.portlets.core.rss.RSSPortlet.1</portlet-class>
                            </portlet-frame>
                        </column-layout>
                    </row-layout>

                </table-layout>
            </portlet-tab>
        </portlet-tabbed-pane>
        </portlet-tab>
        <portlet-tab label="logout" outline="false" align="right"  include="/jsp/logout/logoutnav.jsp"/>
        <portlet-tab label="profile" outline="false" align="right"  include="/jsp/profile/profilenav.jsp"/>
        <portlet-tab required-role="ADMIN" label="layout" outline="false" align="right"  include="/jsp/admin/layout/layoutnav.jsp"/>
        <portlet-tab label="admin" outline="false" align="right"  include="/jsp/admin/adminnav.jsp"/>
    </portlet-tabbed-pane>

    <portlet-footer>
        <table-layout style="footer">
            <row-layout>
                <column-layout width="50%">
                    <portlet-frame transparent="true" outer-padding="0" label="date">
                        <portlet-class>org.gridsphere.portlets.core.date.DatePortlet</portlet-class>
                    </portlet-frame>
                </column-layout>
                <column-layout width="50%">
                    <portlet-content include="/WEB-INF/CustomPortal/content/pagefooter.jsp"/>
                </column-layout>
            </row-layout>
        </table-layout>
    </portlet-footer>

</page-layout>

