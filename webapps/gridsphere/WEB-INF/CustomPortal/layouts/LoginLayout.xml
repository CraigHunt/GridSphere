<?xml version="1.0" encoding="UTF-8"?>

<!--

    Guest User Layout Descriptor

    This descriptor defines the guest user's portal layout configuration

    $Id: GuestUserLayout.xml 5189 2006-08-29 16:54:53Z novotny $
-->

<page-layout label="login" title="GridSphere Portal" keywords="gridsphere" icon="images/favicon.ico" editable="false" renderkit="brush">

    <!-- Header components -->
    <portlet-header>
        <table-layout style="header">
            <row-layout>
                <column-layout width="60%">
                    <portlet-content include="/WEB-INF/CustomPortal/content/pagehead.jsp"/>
                </column-layout>
                <column-layout width="30%">
                    <portlet-frame transparent="true" outer-padding="0px" label="locale">
                        <portlet-class>org.gridsphere.portlets.core.locale.LocalePortlet</portlet-class>
                    </portlet-frame>
                </column-layout>
                <column-layout width="10%">
                    <portlet-content include="/jsp/returnguestnav.jsp"/>
                </column-layout>
            </row-layout>
        </table-layout>
    </portlet-header>

    <bar>
        <table-layout>
            <row-layout>
                <column-layout width="100%">
                    <portlet-frame label="login" outer-padding="5% 35%">
                        <portlet-class>org.gridsphere.portlets.core.login.LoginPortlet</portlet-class>
                    </portlet-frame>
                </column-layout>
            </row-layout>
        </table-layout>
    </bar>

    <!-- Footer components (if any) -->
    <portlet-footer>
        <table-layout style="footer">
            <row-layout>
                <column-layout width="50%">
                    <portlet-frame transparent="true" outer-padding="0px" label="date">
                        <portlet-class>org.gridsphere.portlets.core.date.DatePortlet</portlet-class>
                    </portlet-frame>
                </column-layout>
                <column-layout width="50%">
                    <portlet-content include="/WEB-INF/CustomPortal/content/pagefooter.jsp"/>
                </column-layout>
            </row-layout>
        </table-layout>
    </portlet-footer>

</page-layout>
