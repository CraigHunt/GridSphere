<?xml version="1.0" encoding="UTF-8"?>

<!--

Template Layout Descriptor

This descriptor defines the template user's portal layout configuration

$Id$
-->

<page-layout title="GridSphere Portal" keywords="gridsphere" icon="images/favicon.ico" renderkit="brush" editable="false">

    <portlet-header>
        <table-layout>
            <row-layout>
                <column-layout width="85%">
                    <portlet-content include="/WEB-INF/CustomPortal/content/pagehead.html"/>
                </column-layout>
                <column-layout width="14%">
                    <portlet-frame transparent="true" outer-padding="0" label="logout">
                        <portlet-class>org.gridlab.gridsphere.portlets.core.login.LogoutPortlet.1</portlet-class>
                    </portlet-frame>
                </column-layout>
            </row-layout>
        </table-layout>
    </portlet-header>

    <portlet-tabbed-pane selected="0" style="menu">

    </portlet-tabbed-pane>
    <!-- Footer components (if any) -->

    <portlet-footer>
        <table-layout>
            <row-layout>
                <column-layout width="100%">
                    <portlet-frame transparent="true" outer-padding="0" label="date">
                        <portlet-class>org.gridlab.gridsphere.portlets.core.date.DatePortlet.1</portlet-class>
                    </portlet-frame>
                </column-layout>
            </row-layout>
        </table-layout>
    </portlet-footer>

</page-layout>
