<?xml version="1.0" encoding="UTF-8"?>
<portlet-layout>

<container-name theme="xp">GridSphere Portal</container-name>

<!-- Title -->
<!--
<portlet-image>
    <image>images/title.jpg</image>
</portlet-image>
-->

<portlet-panel>
    <grid-layout columns="80,20">
        <portlet-text include="/html/pagehead.html"/>
        <portlet-frame transparent="true">
            <portlet-class>org.gridlab.gridsphere.portlets.core.LogoutPortlet.1</portlet-class>
        </portlet-frame>
    </grid-layout>
</portlet-panel>

<!-- Tabbed Panes -->
<portlet-tabbed-pane selected="0" style="menu">
  <!--  <selected>0</selected>
    <style>menu</style>      -->
    <portlet-tab>
        <title>Configuration</title>
        <portlet-tabbed-pane selected="0" style="sub-menu">
            <!--<selected>0</selected>
            <style>sub-menu</style>     -->
            <portlet-tab>
                <title>Login</title>
                <portlet-panel>
                    <grid-layout columns="40,30,30">
                        <portlet-frame>
                            <width>60</width>
                            <portlet-class>org.gridlab.gridsphere.portlets.core.LoginPortlet.1</portlet-class>
                        </portlet-frame>
                        <portlet-frame>
                            <name>RSS</name>
                            <portlet-class>org.gridlab.gridsphere.portlets.core.RSSPortlet.1</portlet-class>
                        </portlet-frame>
                        <portlet-frame>
                            <name>DemoPortlet</name>
                            <portlet-class>org.gridlab.gridsphere.portlets.core.DemoPortlet.2</portlet-class>
                        </portlet-frame>
                        <portlet-frame>
                            <portlet-class>org.gridlab.gridsphere.portlets.core.manager.PortletApplicationManager.1</portlet-class>
                        </portlet-frame>
                    </grid-layout>
                </portlet-panel>
            </portlet-tab>
            <portlet-tab>
                <title>Whatever</title>
                <portlet-panel>
                    <grid-layout>
                        <portlet-frame>
                            <name>HelloWorld</name>
                            <portlet-class>org.gridlab.gridsphere.portlets.core.HelloWorld.666.2</portlet-class>
                        </portlet-frame>
                        <portlet-frame>
                            <name>HelloWorld</name>
                            <portlet-class>org.gridlab.gridsphere.portlets.core.HelloWorld.666.4</portlet-class>
                        </portlet-frame>
                    </grid-layout>
                </portlet-panel>
            </portlet-tab>
            <portlet-tab>
                <title>New Stuff</title>
                <portlet-panel>
                    <grid-layout columns="70,30">
                        <portlet-frame>
                            <name>RSS</name>
                            <portlet-class>org.gridlab.gridsphere.portlets.core.RSSPortlet.1</portlet-class>
                        </portlet-frame>
                        <portlet-frame>
                            <name>HelloWorld</name>
                            <portlet-class>org.gridlab.gridsphere.portlets.core.HelloWorld.666.4</portlet-class>
                        </portlet-frame>
                    </grid-layout>
                </portlet-panel>
            </portlet-tab>
        </portlet-tabbed-pane>
    </portlet-tab>
    <portlet-tab>
        <title>Cactus</title>
        <portlet-tabbed-pane style="sub-menu">
            <portlet-tab>
                <title>Cactus</title>
                <portlet-panel>
                    <flow-layout>
                        <align>1</align>
                        <hgap>1</hgap>
                        <vgap>1</vgap>
                        <portlet-frame>
                            <portlet-class>org.gridlab.gridsphere.portlets.core.HalloWelt.624.2</portlet-class>
                        </portlet-frame>
                    </flow-layout>
                </portlet-panel>
            </portlet-tab>
        </portlet-tabbed-pane>
    </portlet-tab>
    <portlet-tab>
        <title>ASC</title>
        <portlet-tabbed-pane style="sub-menu">
            <portlet-tab>
                <title>ASC</title>
                <portlet-panel>
                    <flow-layout>
                        <align>1</align>
                        <hgap>1</hgap>
                        <vgap>1</vgap>
                        <portlet-frame>
                            <portlet-class>org.gridlab.gridsphere.portlets.core.HalloWelt.624.2</portlet-class>
                        </portlet-frame>
                    </flow-layout>
                </portlet-panel>
            </portlet-tab>
        </portlet-tabbed-pane>
    </portlet-tab>
</portlet-tabbed-pane>

</portlet-layout>
