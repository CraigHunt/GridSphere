<?xml version="1.0" encoding="UTF-8"?>
<portlet-layout>

<container-name theme="xp">GridSphere Portal</container-name>

<!-- Title -->
<!--
<portlet-image>
    <image>images/title.jpg</image>
</portlet-image>
-->

<portlet-text include="/html/pagehead.html"/>

<!-- Tabbed Panes -->
<portlet-tabbed-pane selected="0" style="menu">
    <portlet-tab>
        <title>Home</title>
        <portlet-tabbed-pane selected="0" style="sub-menu">
            <portlet-tab>
                <title>Welcome</title>
                <portlet-panel>
                    <grid-layout columns="40,60">
                        <portlet-frame>
                            <name>Login</name>
                            <portlet-class>org.gridlab.gridsphere.portlets.core.LoginPortlet.1</portlet-class>
                        </portlet-frame>
                        <portlet-frame>
                            <name>RSS</name>
                            <portlet-class>org.gridlab.gridsphere.portlets.core.RSSPortlet.1</portlet-class>
                        </portlet-frame>
                    </grid-layout>
                </portlet-panel>
            </portlet-tab>
            <portlet-tab>
                <title>News</title>
                <portlet-panel>
                    <grid-layout>
                        <portlet-frame>
                            <name>RSS</name>
                            <portlet-class>org.gridlab.gridsphere.portlets.core.RSSPortlet.1</portlet-class>
                        </portlet-frame>
                    </grid-layout>
                </portlet-panel>
            </portlet-tab>
        </portlet-tabbed-pane>
    </portlet-tab>
    <portlet-tab>
        <title>Examples</title>
        <portlet-tabbed-pane style="sub-menu">
            <portlet-tab>
                <title>Hello World!</title>
                <portlet-panel>
                    <grid-layout>
                        <portlet-frame>
                            <name>HalloWelt</name>
                            <portlet-class>org.gridlab.gridsphere.portlets.examples.HalloWelt.1</portlet-class>
                        </portlet-frame>
                        <portlet-frame>
                            <name>HalloWelt</name>
                            <portlet-class>org.gridlab.gridsphere.portlets.examples.HalloWelt.1</portlet-class>
                        </portlet-frame>
                        <portlet-frame>
                            <name>HelloWorld</name>
                            <portlet-class>org.gridlab.gridsphere.portlets.examples.HelloWorld.1</portlet-class>
                        </portlet-frame>
                        <portlet-frame>
                            <name>HelloWorld</name>
                            <portlet-class>org.gridlab.gridsphere.portlets.examples.HelloWorld.2</portlet-class>
                        </portlet-frame>
                    </grid-layout>
                </portlet-panel>
            </portlet-tab>
            <portlet-tab>
                <title>Demos</title>
                <portlet-panel>
                    <grid-layout>
                        <portlet-frame>
                            <name>DemoPortlet</name>
                            <portlet-class>org.gridlab.gridsphere.portlets.examples.DemoPortlet.1</portlet-class>
                        </portlet-frame>
                    </grid-layout>
                </portlet-panel>
            </portlet-tab>
        </portlet-tabbed-pane>
    </portlet-tab>
</portlet-tabbed-pane>

</portlet-layout>
