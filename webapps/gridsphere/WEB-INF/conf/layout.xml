<!-- Tabbed Panes -->
<portlet-tabbed-pane>
    <portlet-tab>
        <title>Configuration</title>
        <selected>true</selected>
        <portlet-panel>
            <grid-layout>
                <columns>1</columns>
                <rows>3</rows>
                <portlet-insets>
                    <width>2</width>
                    <height>2</height>
                </portlet-insets>
                <portlet-frame>
                    <name>HalloWelt</name>
                    <portlet-class>org.gridlab.gridsphere.portlets.core.HalloWelt.624.2</portlet-class>
                </portlet-frame>

                <portlet-frame>
                    <name>HelloWorld</name>
                    <portlet-class>org.gridlab.gridsphere.portlets.core.HelloWorld.666.2</portlet-class>
                </portlet-frame>

                <portlet-frame>
                    <name>HelloWorld</name>
                    <portlet-class>org.gridlab.gridsphere.portlets.core.HelloWorld.666.4</portlet-class>
                </portlet-frame>
            </grid-layout>
          </portlet-panel>

        </portlet-tab>
        <portlet-tab>
            <title>Cactus</title>
            <selected>false</selected>
            <portlet-panel>
                <flow-layout>
                    <align>1</align>
                    <hgap>1</hgap>
                    <vgap>1</vgap>
                    <portlet-frame>
                        <portlet-class>org.gridlab.gridsphere.portlets.core.HalloWelt.624.2</portlet-class>
                    </portlet-frame>
                </flow-layout>
            </portlet-panel>
        </portlet-tab>
    </portlet-tabbed-pane>

</portlet-layout>
