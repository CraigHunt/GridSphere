<?xml version="1.0" encoding="UTF-8"?>
<portlet-layout>

<container-name theme="xp">GridSphere Portal</container-name>

<!-- Title -->
<!--
<portlet-image>
    <image>images/title.jpg</image>
</portlet-image>
-->

<portlet-text include="/html/pagehead.html"/>

<!-- Tabbed Panes -->
<portlet-tabbed-pane selected="0" style="menu">
    <portlet-tab>
        <title>Configuration</title>
        <portlet-tabbed-pane selected="0" style="sub-menu">
            <portlet-tab>
                <title>Login</title>
                <portlet-panel>
                    <grid-layout columns="40,30,30">
                        <portlet-frame>
                            <portlet-class>org.gridlab.gridsphere.portlets.core.LoginPortlet.1</portlet-class>
                        </portlet-frame>
                        <portlet-frame>
                            <name>RSS</name>
                            <portlet-class>org.gridlab.gridsphere.portlets.core.RSSPortlet.1</portlet-class>
                        </portlet-frame>
                        <portlet-frame>
                            <name>DemoPortlet</name>
                            <portlet-class>org.gridlab.gridsphere.portlets.examples.DemoPortlet.2</portlet-class>
                        </portlet-frame>
                        <portlet-frame>
                            <name>HelloWorld</name>
                            <portlet-class>org.gridlab.gridsphere.portlets.examples.HelloWorld.1</portlet-class>
                        </portlet-frame>
                        <portlet-frame>
                            <name>HelloWorld</name>
                            <portlet-class>org.gridlab.gridsphere.portlets.examples.HelloWorld.2</portlet-class>
                        </portlet-frame>
                    </grid-layout>
                </portlet-panel>
            </portlet-tab>
            <portlet-tab>
                <title>Whatever</title>
                <portlet-panel>
                    <grid-layout>
                        <portlet-frame>
                            <name>HelloWorld</name>
                            <portlet-class>org.gridlab.gridsphere.portlets.examples.HelloWorld.1</portlet-class>
                        </portlet-frame>
                        <portlet-frame>
                            <name>HelloWorld</name>
                            <portlet-class>org.gridlab.gridsphere.portlets.examples.HelloWorld.2</portlet-class>
                        </portlet-frame>
                    </grid-layout>
                </portlet-panel>
            </portlet-tab>
            <portlet-tab>
                <title>New Stuff</title>
                <portlet-panel>
                    <grid-layout columns="70,30">
                        <portlet-frame>
                            <name>RSS</name>
                            <portlet-class>org.gridlab.gridsphere.portlets.core.RSSPortlet.1</portlet-class>
                        </portlet-frame>
                        <portlet-frame>
                            <name>HelloWorld</name>
                            <portlet-class>org.gridlab.gridsphere.portlets.examples.HelloWorld.2</portlet-class>
                        </portlet-frame>
                    </grid-layout>
                </portlet-panel>
            </portlet-tab>
        </portlet-tabbed-pane>
    </portlet-tab>
    <portlet-tab>
        <title>Cactus</title>
        <portlet-tabbed-pane style="sub-menu">
            <portlet-tab>
                <title>Cactus</title>
                <portlet-panel>
                    <grid-layout>
                        <portlet-frame>
                            <portlet-class>org.gridlab.gridsphere.portlets.examples.HalloWelt.1</portlet-class>
                        </portlet-frame>
                    </grid-layout>
                </portlet-panel>
            </portlet-tab>
        </portlet-tabbed-pane>
    </portlet-tab>
    <portlet-tab>
        <title>ASC</title>
        <portlet-tabbed-pane style="sub-menu">
            <portlet-tab>
                <title>ASC</title>
                <portlet-panel>
                    <grid-layout>
                        <portlet-frame>
                            <portlet-class>org.gridlab.gridsphere.portlets.examples.HalloWelt.1</portlet-class>
                        </portlet-frame>
                    </grid-layout>
                </portlet-panel>
            </portlet-tab>
        </portlet-tabbed-pane>
    </portlet-tab>
</portlet-tabbed-pane>

</portlet-layout>
