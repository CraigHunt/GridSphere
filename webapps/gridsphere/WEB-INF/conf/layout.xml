<!-- Tabbed Panes -->
<portlet-tabbed-pane>
    <portlet-tab>
        <title>Configuration</title>
        <selected>true</selected>
        <portlet-tab-bar>
            <portlet-tab-page>
                <title>Login</title>
                <selected>true</selected>
                <portlet-panel>
                    <grid-layout>
                        <columns>1</columns>
                        <portlet-frame>
                            <width>60</width>
                            <portlet-class>org.gridlab.gridsphere.portlets.core.LoginPortlet.1</portlet-class>
                        </portlet-frame>
                        <portlet-frame>
                            <name>DemoPortlet</name>
                            <portlet-class>org.gridlab.gridsphere.portlets.core.DemoPortlet.2</portlet-class>
                        </portlet-frame>
                        <portlet-frame>
                            <name>ManagerPortlet</name>
                            <portlet-class>org.gridlab.gridsphere.portlets.core.PortletApplicationManager.1</portlet-class>
                        </portlet-frame>
                    </grid-layout>
                </portlet-panel>
            </portlet-tab-page>
            <portlet-tab-page>
                <title>Whatever</title>
                <selected>false</selected>
                <portlet-panel>
                    <grid-layout>
                        <columns>1</columns>
                        <portlet-frame>
                            <name>HelloWorld</name>
                            <portlet-class>org.gridlab.gridsphere.portlets.core.HelloWorld.666.2</portlet-class>
                        </portlet-frame>
                        <portlet-frame>
                            <name>HelloWorld</name>
                            <portlet-class>org.gridlab.gridsphere.portlets.core.HelloWorld.666.4</portlet-class>
                        </portlet-frame>
                    </grid-layout>
                </portlet-panel>
            </portlet-tab-page>
            <portlet-tab-page>
                <title>New Stuff</title>
                <selected>false</selected>
                <portlet-panel>
                    <grid-layout>
                        <columns>2</columns>
                        <portlet-frame>
                            <name>RSS</name>
                            <portlet-class>org.gridlab.gridsphere.portlets.core.RSSPortlet.1</portlet-class>
                        </portlet-frame>
                        <portlet-frame>
                            <name>HelloWorld</name>
                            <portlet-class>org.gridlab.gridsphere.portlets.core.HelloWorld.666.4</portlet-class>
                        </portlet-frame>
                    </grid-layout>
                </portlet-panel>
            </portlet-tab-page>
        </portlet-tab-bar>
    </portlet-tab>
    <portlet-tab>
        <title>Cactus</title>
        <portlet-tab-bar>
            <portlet-tab-page>
                <title>Cactus</title>
                <selected>false</selected>
                <portlet-panel>
                    <flow-layout>
                        <align>1</align>
                        <hgap>1</hgap>
                        <vgap>1</vgap>
                        <portlet-frame>
                            <portlet-class>org.gridlab.gridsphere.portlets.core.HalloWelt.624.2</portlet-class>
                        </portlet-frame>
                    </flow-layout>
                </portlet-panel>
            </portlet-tab-page>
        </portlet-tab-bar>
    </portlet-tab>
</portlet-tabbed-pane>

</portlet-layout>
