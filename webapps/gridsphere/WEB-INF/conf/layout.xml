<?xml version="1.0" encoding="UTF-8"?>
<portlet-layout>

<container-name>GridSphere Portal</container-name>

<!-- Title -->
<portlet-image>
    <image>images/title.jpg</image>
</portlet-image>

<!-- Information -->
<portlet-text>
    <text>/html/info.html</text>
</portlet-text>

<!-- Login -->
<portlet-frame>
    <width>60</width>
    <portlet-title-bar>
        <title-color>#FFFFFF</title-color>
        <line-color>#336699</line-color>
        <font>Arial, Helvetica, sans-serif</font>
        <thickness>2</thickness>
    </portlet-title-bar>
    <portlet-class>org.gridlab.gridsphere.portlets.core.LoginPortlet.1</portlet-class>
</portlet-frame>

<!-- Portlet Dock -->
<portlet-panel>
    <portlet-dock>
        <title>Portlet Dock</title>
        <orientation>1</orientation>
        <portlet-insets>
            <width>4</width>
            <height>4</height>
        </portlet-insets>

        <portlet-minimized>
            <title>Hello</title>
            <foreground>red</foreground>
            <portlet-class>portletclass</portlet-class>
        </portlet-minimized>

        <portlet-minimized>
            <title>Bye</title>
            <foreground>green</foreground>
            <portlet-class>portletclass</portlet-class>
        </portlet-minimized>
    </portlet-dock>
</portlet-panel>

<!-- Tabbed Panes -->
<portlet-tabbed-pane>
    <portlet-tab>
        <title>Configuration</title>
        <foreground>red</foreground>
        <background>blue</background>
        <selected>true</selected>
        <portlet-panel>
            <grid-layout>
                <columns>1</columns>
                <rows>3</rows>
                <portlet-insets>
                    <width>2</width>
                    <height>2</height>
                </portlet-insets>
                <portlet-frame>
                    <name>HalloWelt</name>
                    <width>90</width>
                    <portlet-title-bar>
                        <title-color>#FFFFFF</title-color>
                        <line-color>#336699</line-color>
                        <font>Arial, Helvetica, sans-serif</font>
                        <thickness>2</thickness>
                    </portlet-title-bar>
                    <portlet-class>org.gridlab.gridsphere.portlets.core.HalloWelt.624.2</portlet-class>
                </portlet-frame>

                <portlet-frame>
                    <name>HelloWorld</name>
                    <width>90</width>
                    <portlet-title-bar>
                        <title-color>#FFFFFF</title-color>
                        <line-color>#336699</line-color>
                        <font>Arial, Helvetica, sans-serif</font>
                        <thickness>2</thickness>
                    </portlet-title-bar>
                    <portlet-class>org.gridlab.gridsphere.portlets.core.HelloWorld.666.2</portlet-class>
                </portlet-frame>

                <portlet-frame>
                    <name>HelloWorld</name>
                    <width>90</width>
                    <portlet-title-bar>
                        <title-color>#FFFFFF</title-color>
                        <line-color>#336699</line-color>
                        <font>Arial, Helvetica, sans-serif</font>
                        <thickness>2</thickness>
                    </portlet-title-bar>
                    <portlet-class>org.gridlab.gridsphere.portlets.core.HelloWorld.666.4</portlet-class>
                </portlet-frame>
            </grid-layout>
        </portlet-panel>

        </portlet-tab>
        <portlet-tab>
            <title>Cactus</title>
            <foreground>green</foreground>
            <background>blue></background>
            <selected>false</selected>
            <portlet-panel>
                <flow-layout>
                    <align>1</align>
                    <hgap>1</hgap>
                    <vgap>1</vgap>
                    <portlet-frame>
                        <portlet-title-bar>
                            <title-color>#FFFFFF</title-color>
                            <line-color>#336699</line-color>
                            <font>Arial, Helvetica, sans-serif</font>
                            <thickness>2</thickness>
                        </portlet-title-bar>
                        <portlet-class>org.gridlab.gridsphere.portlets.core.HalloWelt.624.2</portlet-class>
                    </portlet-frame>
                </flow-layout>
            </portlet-panel>
        </portlet-tab>
    </portlet-tabbed-pane>

</portlet-layout>
