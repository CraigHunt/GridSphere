<?xml version="1.0" ?>
<!DOCTYPE mapping PUBLIC "-//EXOLAB/Castor Object Mapping DTD Version 1.0//EN" "http://castor.exolab.org/mapping.dtd">
<mapping>

    <class name="org.gridlab.gridsphere.portletcontainer.descriptor.PortletCollection">
        <map-to xml="portlet-app-collection"/>
        <field name="PortletDefList" type="org.gridlab.gridsphere.portletcontainer.descriptor.PortletDefinition" collection="arraylist">
            <bind-xml name="portlet-app-def"/>
        </field>
    </class>

    <class name="org.gridlab.gridsphere.portletcontainer.descriptor.PortletDefinition">
        <field name="ApplicationPortletDescriptor" type="org.gridlab.gridsphere.portletcontainer.descriptor.ApplicationPortletDescriptor">
            <bind-xml name="portlet-app"/>
        </field>
        <field name="ConcreteApps" type="org.gridlab.gridsphere.portletcontainer.descriptor.ConcretePortletDescriptor" collection="arraylist">
            <bind-xml name="concrete-portlet-app"/>
        </field>
    </class>

    <class name="org.gridlab.gridsphere.portletcontainer.descriptor.ConcretePortletDescriptor">
        <field name="ID" type="string">
            <bind-xml name="id" node="attribute"/>
        </field>
        <field name="ContextParamList" type="org.gridlab.gridsphere.core.persistence.castor.descriptor.ConfigParam" collection="arraylist">
            <bind-xml name="context-param"/>
        </field>
        <field name="ConcretePortletInfo" type="org.gridlab.gridsphere.portletcontainer.descriptor.ConcretePortletInfo">
            <bind-xml name="concrete-portlet"/>
        </field>
    </class>

    <class name="org.gridlab.gridsphere.portletcontainer.descriptor.ConcretePortletInfo">
        <field name="Name" type="string">
            <bind-xml name="portlet-name" attribute="element"/>
        </field>
        <field name="DefaultLocale" type="string">
            <bind-xml name="default-locale" attribute="element"/>
        </field>
        <field name="LanguageList" type="org.gridlab.gridsphere.portletcontainer.descriptor.LanguageInfo" collection="arraylist">
            <bind-xml name="language"/>
        </field>
        <field name="AllowedAccess" type="org.gridlab.gridsphere.portletcontainer.descriptor.AllowedAccess">
            <bind-xml name="allowed-access"/>
        </field>
        <field name="ConfigParamList" type="org.gridlab.gridsphere.core.persistence.castor.descriptor.ConfigParam" collection="arraylist">
            <bind-xml name="config-param"/>
        </field>
    </class>

    <class name="org.gridlab.gridsphere.portletcontainer.descriptor.LanguageInfo">
        <field name="Locale" type="string">
            <bind-xml name="locale" node="attribute"/>
        </field>
        <field name="Title" type="string">
            <bind-xml name="title"/>
        </field>
        <field name="TitleShort" type="string">
            <bind-xml name="title-short"/>
        </field>
        <field name="Description" type="string">
            <bind-xml name="description"/>
        </field>
        <field name="Keywords" type="string">
            <bind-xml name="keywords"/>
        </field>
    </class>

    <class name="org.gridlab.gridsphere.portletcontainer.descriptor.AllowedAccess">
        <field name="Visibility" type="string">
            <bind-xml name="visibility" node="attribute"/>
        </field>
        <field name="Role" type="string">
            <bind-xml name="role"/>
        </field>
    </class>

    <class name="org.gridlab.gridsphere.portletcontainer.descriptor.ApplicationPortletDescriptor">
        <field name="ID" type="string">
            <bind-xml name="id" node="attribute"/>
        </field>
        <field name="PortletName" type="string">
            <bind-xml name="portlet-name"/>
        </field>
        <field name="ServletName" type="string">
            <bind-xml name="servlet-name"/>
        </field>
        <field name="ConfigParamList" type="org.gridlab.gridsphere.core.persistence.castor.descriptor.ConfigParam" collection="arraylist">
            <bind-xml name="portlet-config"/>
        </field>
        <field name="CacheInfo" type="org.gridlab.gridsphere.portletcontainer.descriptor.CacheInfo">
            <bind-xml name="cache"/>
        </field>
        <field name="AllowsWindowStates" type="org.gridlab.gridsphere.portletcontainer.descriptor.AllowsWindowStates">
            <bind-xml name="allows"/>
        </field>
        <field name="SupportsModes" type="org.gridlab.gridsphere.portletcontainer.descriptor.SupportsModes">
            <bind-xml name="supports"/>
        </field>
    </class>

    <class name="org.gridlab.gridsphere.portletcontainer.descriptor.CacheInfo">
        <field name="Expires" type="long">
            <bind-xml name="expires"/>
        </field>
        <field name="Shared" type="string">
            <bind-xml name="shared"/>
        </field>
    </class>

    <class name="org.gridlab.gridsphere.portletcontainer.descriptor.AllowsWindowStates">
        <field name="WindowStates" type="org.exolab.castor.types.AnyNode" collection="arraylist">
            <bind-xml matches="*"/>
        </field>
    </class>

    <class name="org.gridlab.gridsphere.portletcontainer.descriptor.SupportsModes">
        <field name="MarkupList" type="org.gridlab.gridsphere.portletcontainer.descriptor.Markup" collection="arraylist">
            <bind-xml name="markup"/>
        </field>
    </class>

    <class name="org.gridlab.gridsphere.portletcontainer.descriptor.Markup">
        <field name="Name" type="string">
            <bind-xml name="name" node="attribute"/>
        </field>
        <field name="PortletModes" type="org.exolab.castor.types.AnyNode" collection="arraylist">
            <bind-xml matches="*"/>
        </field>
    </class>

    <class name="org.gridlab.gridsphere.core.persistence.castor.descriptor.ConfigParam">
        <field name="ParamName" type="string">
            <bind-xml name="param-name"/>
        </field>
        <field name="ParamValue" type="string">
            <bind-xml name="param-value"/>
        </field>
    </class>

</mapping>