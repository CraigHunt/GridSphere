<?xml version="1.0" encoding="UTF-8"?>
<!--

    Authentication Modules

    This descriptor defines the authentication modules supported

    $Id$
-->

<auth-modules>

    <auth-module>
        <name>PasswordAuth</name>
        <description>Hashed password based authentication using GridSphere database</description>
        <implementation>org.gridlab.gridsphere.services.core.security.auth.modules.impl.PasswordAuthModule</implementation>
        <active>true</active>
        <priority>100</priority>
        <auth-config>
            <param-name>aname</param-name>
            <param-value>avalue</param-value>
        </auth-config>
    </auth-module>


</auth-modules>