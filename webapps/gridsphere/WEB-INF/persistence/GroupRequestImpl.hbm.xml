<?xml version="1.0"?>

<!DOCTYPE hibernate-configuration
    PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
        
<hibernate-mapping>
    <class
        name="org.gridlab.gridsphere.services.core.security.acl.impl.GroupRequestImpl"
        table="grouprequestimpl"
        >

        <id
            name="oid"
            column="gsoid"
            type="java.lang.String"
            length="32"
            >
            <generator class="uuid.hex"/>

        </id>

        <many-to-one
            name="sportletUser"
            class="org.gridlab.gridsphere.portlet.impl.SportletUserImpl">
        </many-to-one>
        <many-to-one
            name="sportletGroup"
            class="org.gridlab.gridsphere.portlet.impl.SportletGroup">
        </many-to-one>
        <many-to-one
            name="role"
            class="org.gridlab.gridsphere.portlet.PortletRole">
        </many-to-one>
        <property name="roleName" type="string" column="roleName"/>

    </class>


</hibernate-mapping>
