<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 1.1//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
    <class
        name="org.gridlab.gridsphere.portlet.jsrimpl.PersistencePreference"
        table="portletpref"
        >

        <id
            name="oid"
            column="oid"
            type="java.lang.String"
            length="32"
            >
            <generator class="uuid.hex"/>

        </id>

        <property name="userId" type="string" column="userid"/>
        <property name="portletId" type="string" column="portletid"/>
        <map name="attributes" table="portletprefattribute" cascade="all">
            <key column="attr_oid"/>
            <index column="attr_ndx" type="string"/>
            <many-to-many column="value_oid" class="org.gridlab.gridsphere.portlet.jsrimpl.PersistencePreferenceAttribute"/>

        </map>

    </class>


</hibernate-mapping>