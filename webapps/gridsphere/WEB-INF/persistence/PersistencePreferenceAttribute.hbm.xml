<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 1.1//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
    <class
        name="org.gridlab.gridsphere.portlet.jsrimpl.PersistencePreferenceAttribute"
        table="persistenceprefattr"
        >

        <id
            name="oid"
            column="oid"
            type="java.lang.String"
            length="32"
            >
            <generator class="uuid.hex"/>

        </id>

        <property name="readonly" type="boolean" column="readonly"/>
        <map name="values" table="persistenceprefattrvalues">
            <key column="oid"/>
            <index column="attribute" type="string"/>
            <element column="value" type="string"/>
        </map>

    </class>


</hibernate-mapping>