        <concrete-portlet-app id="org.gridlab.gridsphere.portlets.core.admin.users.UserManagerPortlet.1">
            <concrete-portlet>
                <portlet-name>User Account Manager</portlet-name>
                <default-locale>en</default-locale>
                <language locale="en_US">
                    <title>User Account Manager</title>
                    <title-short>UserManager</title-short>
