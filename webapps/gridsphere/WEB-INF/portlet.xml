        </portlet-app>

        <concrete-portlet-app id="org.gridlab.gridsphere.portlets.core.LoginPortlet.1">
            <concrete-portlet>
                <portlet-name>Login</portlet-name>
                <default-locale>en</default-locale>
                <language locale="en_US">
                    <title>Login</title>
                    <title-short>Login</title-short>
                    <description>Portlet provides login capabilities</description>
                    <keywords>portlet login</keywords>
                </language>
                <language locale="hu">
                    <title>Bejelentkezés</title>
                    <title-short>Bejelentkezés</title-short>
                    <description>A portlet a portálba való bejelentkezésre szolgál</description>
                    <keywords>bejelentkezés portlet (hu)</keywords>
                </language>
            </concrete-portlet>
        </concrete-portlet-app>
    </portlet-app-def>

    <portlet-app-def>
