<?xml version="1.0" ?>
<!--

    Portlet role mapping file

    $Id$

-->
<!DOCTYPE mapping PUBLIC "-//EXOLAB/Castor Object Mapping DTD Version 1.0//EN" "http://castor.exolab.org/mapping.dtd">
<mapping>

    <class name="org.gridsphere.services.core.security.role.impl.descriptor.PortletRoleCollection">
        <map-to xml="portlet-roles"/>
        <field name="PortletRolesList" type="org.gridsphere.services.core.security.role.impl.descriptor.PortletRoleDescription" collection="vector">
            <bind-xml name="portlet-role"/>
        </field>
    </class>

    <class name="org.gridsphere.services.core.security.role.impl.descriptor.PortletRoleDescription">
        <map-to xml="portlet-role"/>
        <field name="RoleName" type="string">
            <bind-xml name="role-name"/>
        </field>
        <field name="RoleDescription" type="string">
            <bind-xml name="role-description"/>
        </field>
    </class>

</mapping>
