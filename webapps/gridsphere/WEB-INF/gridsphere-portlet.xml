<?xml version="1.0" encoding="UTF-8"?>

<portlet-app-collection>

    <portlet-app-def>

        <portlet-app id="org.gridsphere.provider.portlet.jsr.PortletServlet">
            <portlet-name>JSR Portlet Servlet</portlet-name>
            <servlet-name>PortletServlet</servlet-name>
        </portlet-app>

        <concrete-portlet-app id="org.gridsphere.provider.portlet.jsr.PortletServlet.1">
            <concrete-portlet>
                <portlet-name>Portlet Servlet</portlet-name>
                <default-locale>en</default-locale>
                <language locale="en">
                    <title>Portlet Servlet</title>
                    <title-short>Portlet Servlet</title-short>
                    <description>A JSR Portlet Loader</description>
                    <keywords>portlet servlet</keywords>
                </language>
            </concrete-portlet>
        </concrete-portlet-app>

    </portlet-app-def>

    <portlet-app-def>
        <portlet-app id="org.gridsphere.portlets.core.admin.layout.LayoutManagerPortlet">
            <portlet-name>Layout Manager Portlet</portlet-name>
            <servlet-name>LayoutManagerPortlet</servlet-name>
            <allows>
                <minimized/>
                <maximized/>
                <resizing/>
            </allows>
            <supports>
                <markup name="html">
                    <view/>
                    <help/>
                </markup>
            </supports>
        </portlet-app>

        <concrete-portlet-app id="org.gridsphere.portlets.core.admin.layout.LayoutManagerPortlet.1">
            <concrete-portlet>
                <portlet-name>Layout Manager Portlet</portlet-name>
                <default-locale>en</default-locale>
                <language locale="zh">
                    <title>【版面管理者门件 Layout Manager Portlet】</title>
                    <description>提供了用户版面定制化功能</description>
                </language>
                <language locale="en">
                    <title>Layout Manager</title>
                    <description>Provides administrative layout customization</description>
                </language>
                <language locale="es">
                    <title>Administrador de Layout</title>
                    <description>Proporciona la personalizacion del esquema administrativo</description>
                </language>
                <language locale="de">
                    <title>Layout Managieren</title>
                    <description>Ermöglicht die benutzerspezifische Anpassung der Darstellung</description>
                </language>
                <language locale="fr">
                    <title>Gestionnaire de Layout</title>
                    <description>Permet a l'usager de modifier le layout</description>
                </language>
                <language locale="it">
                    <title>Gestione Layout</title>
                    <description>Consente la personalizzazione del layout utente</description>
                </language>
                <language locale="cs">
                    <title>Správa umístění portletů</title>
                    <description>Poskytuje uživatelem nastavitelné umístění portletů</description>
                </language>
                <language locale="hu">
                    <title>Felépítés szekesztő</title>
                    <description>Lehetővé teszi a portletekből egyéni weblapok felépítését</description>
                </language>
                <language locale="pl">
                    <title>Menadżer układów graficznych</title>
                    <description>Udostępnia użytkownikowi dostosowywanie układów graficznych</description>
                </language>
				<language locale="ar">
                    <title>مدير التنسيق</title>
                    <description>يمكن المستخدم لتعديل التنسيق</description>
                </language>
                <language locale="nl">
                    <title>Layout Manager</title>
                    <description>Gebruikers kunnen hun eigen layout bepalen</description>
                </language>
                <language locale="hr">
                    <title>Upravitelj izgleda</title>
                    <title-short>Upravitelj izgleda</title-short>
                    <description>Portlet omogućava administriranje izgleda</description>
                    <keywords>administriranje izgleda</keywords>
                </language>
                <language locale="ja">
                    <title>レイアウト管理</title>
                    <description>管理上のレイアウトカスタマイズ</description>
                </language>
            </concrete-portlet>
        </concrete-portlet-app>
    </portlet-app-def>


</portlet-app-collection>

