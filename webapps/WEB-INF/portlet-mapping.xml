<!DOCTYPE mapping PUBLIC "-//EXOLAB/Castor Object Mapping DTD Version 1.0//EN" "http://castor.exolab.org/mapping.dtd">
<mapping>

    <class name="org.gridlab.gridsphere.portletcontainer.descriptor.PortletDefinition">
        <map-to xml="portlet-app-def"/>
        <field name="PortletAppList" type="org.gridlab.gridsphere.portletcontainer.descriptor.PortletApplication" collection="vector">
            <bind-xml name="portlet-app"/>
        </field>

    </class>


    <class name="org.gridlab.gridsphere.portletcontainer.descriptor.PortletApplication">
        <field name="Uid" type="string">
            <bind-xml name="uid" node="attribute"/>
        </field>

        <field name="Name" type="string">
            <bind-xml name="portlet-app-name" attribute="element"/>
        </field>

        <field name="Portlet" type="org.gridlab.gridsphere.portletcontainer.descriptor.Portlet">
            <bind-xml name="portlet"/>
        </field>
    </class>


    <class name="org.gridlab.gridsphere.portletcontainer.descriptor.Portlet">
        <field name="Href" type="string">
            <bind-xml name="href" node="attribute"/>
        </field>

        <field name="Id" type="string">
            <bind-xml name="id" node="attribute"/>
        </field>

        <field name="Name" type="string">
            <bind-xml name="portlet-name"/>
        </field>

    </class>


</mapping>