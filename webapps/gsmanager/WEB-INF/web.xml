<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/j2ee/dtds/web-app_2.3.dtd">

<web-app>
    <display-name>GridSphere Manager Portlet</display-name>

    <description>
        Provides GridSphere Manager Portlet
    </description>

    <servlet>
        <servlet-name>ManagerPortlet</servlet-name>
        <servlet-class>org.gridlab.gridsphere.portlets.manager.PortletApplicationManager</servlet-class>
    </servlet>

    <servlet-mapping>
       <servlet-name>ManagerPortlet</servlet-name>
       <url-pattern>/appmanager</url-pattern>
    </servlet-mapping>

    <mime-mapping>
      <extension>wbmp</extension>
      <mime-type>image/vnd.wap.wbmp</mime-type>
    </mime-mapping>

    <mime-mapping>
      <extension>wml</extension>
      <mime-type>text/vnd.wap.wml</mime-type>
    </mime-mapping>

    <mime-mapping>
      <extension>wmls</extension>
      <mime-type>text/vnd.wap.wmlscript</mime-type>
    </mime-mapping>

</web-app>
