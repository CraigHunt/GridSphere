<!-- +++++++++++++++ START TESTS +++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->


    <!-- =================================================================== -->
    <!-- Prepares the Junit tests                                            -->
    <!-- =================================================================== -->
    <target name="test-prepare" description="prepares the Junit tests">
        <property name="DB_CONFIG_FILE" value="webapps/gridsphere/WEB-INF/conf/hsqldb-junit.xml"/>
        <property name="DB_DATABASE" value="junit"/>
        <property name="GRIDSPHERE_WEBAPP" value="${gswebapp.dir}"/>
        <!-- now delete the jar file to make sure we get a correct one -->
        <delete file="${gridsphere.build}/lib/gridsphere.jar"/>
        <delete file="${gridsphere.build}/gridsphere/gridsphere.properties"/>
        <delete file="${build.db}/junit-db.script"/>
        <delete file="${build.db}/junit-db.properties"/>
    </target>

    <!-- =================================================================== -->
    <!-- Runs all JUnit tests: needs optional.jar and junit in classpath     -->
    <!-- =================================================================== -->
    <target name="run-tests" depends="test-prepare, compile-unit-tests,  db-hsqldb-junit, jar" if="junit.present" description="Runs all JUnit tests">
        <mkdir dir="${gridsphere.build}/reports"/>
        <junit printsummary="yes" fork="yes" haltonfailure="no">
            <classpath>
                <path refid="classpath"/>
                <pathelement location="${gridsphere.build}/lib/gridsphere.jar"/>
            </classpath>
            <test name="org.gridlab.gridsphere.AllJUnitTests" todir="${gridsphere.build}/reports">
                <formatter type="xml"/>
            </test>
        </junit>
    </target>


    <target name="make-test-reports" depends="run-tests,  db-hsqldb-junit, jar" if="junit.present" description="Execute Unit Tests">
       <mkdir dir="${gridsphere.build}/reports/html"/>
       <junitreport todir="${gridsphere.build}/reports">
            <fileset dir="${gridsphere.build}/reports">
                <include name="TEST-*.xml"/>
            </fileset>
            <report format="frames" todir="${gridsphere.build}/reports/html"/>
        </junitreport>
    </target>

<!-- +++++++++++++++ END TESTS +++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->

<!-- ++++++++++++++ START CRUSECONTROL ++++++++++++++++++++ -->

    <target name="cruisecontrol" depends="clean" description="target for cruisecontrol">
        <mkdir dir="${gridsphere.build}/reports"/>
        <junit printsummary="yes" fork="yes" haltonfailure="no">
