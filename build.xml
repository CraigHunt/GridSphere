    <!-- =================================================================== -->
    <target name="dist" depends="clean, jar, war" description="Build GridSphere binary distribution">
        <mkdir dir="${gridsphere.dist}"/>
        <mkdir dir="${gridsphere.dist}/webapps"/>
        <copy todir="${gridsphere.dist}">
            <fileset dir="${gridsphere.build}"/>
        </copy>
    </target>

</project>
